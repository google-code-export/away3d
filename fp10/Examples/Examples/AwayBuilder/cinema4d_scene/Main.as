package{	import awaybuilder.SceneSource;	import awaybuilder.WorldBuilder;		import flash.display.Sprite;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	import flash.net.URLLoader;	import flash.net.URLRequest;				public class Main extends Sprite	{		protected var _world : WorldBuilder;								public function Main ( )		{			var loader : URLLoader = new URLLoader ( );						stage.align = StageAlign.TOP_LEFT;			stage.scaleMode = StageScaleMode.NO_SCALE;			loader.addEventListener ( Event.COMPLETE , onColladaComplete );			loader.load ( new URLRequest ( "cinema4d/world.xml" ) );		}								protected function onColladaComplete ( event : Event ) : void		{			var loader : URLLoader = event.target as URLLoader;						_world = new WorldBuilder ( );			_world.source = SceneSource.CINEMA4D;			_world.data = loader.data;			_world.startCamera = "overviewCam";			_world.addEventListener ( Event.COMPLETE , onWorldComplete );			addChild ( _world );			_world.build ( );		}								protected function onWorldComplete ( event : Event ) : void		{			trace ( "world complete" );			stage.addEventListener ( Event.RESIZE , resize );			resize ( );		}								protected function resize ( event : Event = null ) : void		{			_world.x = stage.stageWidth * 0.5;			_world.y = stage.stageHeight * 0.5;		}	}}